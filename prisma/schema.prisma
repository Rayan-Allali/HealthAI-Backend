generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model patient{
id Int @id @default(uuid()) 
nom String 
prenom String 
dateDeNaissance DateTime 
email String 
password String 
Location String 
watchId smartWatch? 
}
model doctor{
id Int @id @default(uuid()) 
nom String 
prenom String 
adress String 
}
model device{
id Int @id @default(uuid()) 
etat_malade String
}

model nurse{
id Int @id @default(uuid()) 
nom String
}
model symptom{
code Int @id @default(uuid()) 
nom String 
illnesses illness[]
}
model illness{
code String @id @default(uuid()) 
nom String 
symp symptom[] 
}
model floor{
num Int @unique 
rooms room[] 
}
model room{
  id Int @unique 
NumEt Int 
etag floor @relation(fields: [NumEt], references: [num]) 
beds bed[]
}
model bed{
id Int @id @default(uuid()) 
NumBed Int 
RoomId Int 
Room room @relation(fields: [RoomId], references: [id]) 
}
model smartWatch{
id Int @id @default(uuid()) 
userId Int @unique 
User user @relation(fields: [userId], references: [id]) 
ambulances ambulance[]
}
model ambulance{
id Int @id @default(uuid()) 
smartWatches smartWatch[] 
}
